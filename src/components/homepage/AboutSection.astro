---
// src/components/homepage/AboutSection.astro
// Composant pour la section "À propos" de la page d'accueil

interface KeyPoint {
  icon: string;
  title: string;
  description: string;
}

interface Props {
  title: string;
  description: string;
  image: string;
  keyPoints: KeyPoint[];
}

const { title, description, image = "/images/about-default.jpg", keyPoints = [] } = Astro.props;
---

<section class="py-16 bg-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Image -->
      <div class="relative">
        <div class="relative rounded-lg overflow-hidden shadow-xl">
          <img 
            src={image} 
            alt="À propos de notre entreprise" 
            class="w-full h-auto object-cover"
          />
          
          <!-- Badges flottants -->
          <div class="absolute top-4 left-4 bg-blue-600 text-white px-4 py-2 rounded-full font-semibold text-sm">
            <i class="fa-solid fa-certificate mr-2"></i>
            Certifié
          </div>
          
          <div class="absolute bottom-4 right-4 bg-green-600 text-white px-4 py-2 rounded-full font-semibold text-sm flex items-center">
            <i class="fa-solid fa-shield-halved mr-2"></i>
            Garantie Qualité
          </div>
        </div>
        
        <!-- Formes décoratives -->
        <div class="absolute -top-6 -left-6 w-24 h-24 bg-blue-100 rounded-full z-0 opacity-70"></div>
        <div class="absolute -bottom-6 -right-6 w-32 h-32 bg-blue-50 rounded-full z-0 opacity-70"></div>
      </div>
      
      <!-- Contenu textuel -->
      <div>
        <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-6 relative">
          {title}
          <span class="block w-20 h-1 bg-blue-600 mt-4"></span>
        </h2>
        
        <p class="text-lg text-gray-700 mb-8">
          {description}
        </p>
        
        <!-- Points clés -->
        <div class="space-y-6">
          {keyPoints.map((point) => (
            <div class="flex items-start">
              <div class="flex-shrink-0 w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mr-4">
                <i class={`fa-solid fa-${point.icon} text-blue-600 text-xl`}></i>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-gray-900 mb-1">{point.title}</h3>
                <p class="text-gray-600">{point.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>