//----------------------- HERO BANNER -----------------------
---
// src/components/homepage/HeroBanner.astro
// Composant pour le Hero Banner de la page d'accueil

interface Props {
  title: string;
  description: string;
  backgroundImage: string;
  buttonText: string;
  buttonUrl: string;
  overlay?: string;
}

const { 
  title, 
  description, 
  backgroundImage, 
  buttonText, 
  buttonUrl, 
  overlay = "rgba(0, 0, 0, 0.5)" 
} = Astro.props;
---

<section 
  class="relative bg-cover bg-center bg-no-repeat min-h-[80vh] flex items-center"
  style={`background-image: url(${backgroundImage});`}
>
  <!-- Overlay -->
  <div 
    class="absolute inset-0 z-0" 
    style={`background-color: ${overlay};`}
  ></div>
  
  <!-- Contenu -->
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10 py-16 sm:py-24 md:py-32">
    <div class="max-w-2xl">
      <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold text-white leading-tight mb-6 animate-fade-in">
        {title}
      </h1>
      
      <p class="text-xl sm:text-2xl text-gray-100 mb-8 max-w-xl animate-fade-in animation-delay-200">
        {description}
      </p>
      
      <div class="flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-4 animate-fade-in animation-delay-400">
        <a 
          href={buttonUrl} 
          class="inline-block px-8 py-4 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transform hover:scale-105 transition-all duration-300 text-center"
        >
          {buttonText}
        </a>
        
        <a 
          href="tel:+33123456789" 
          class="inline-flex items-center justify-center px-8 py-4 bg-transparent border-2 border-white text-white font-semibold rounded-lg hover:bg-white hover:text-blue-900 transition-all duration-300 text-center"
        >
          <i class="fa-solid fa-phone mr-2"></i>
          Appeler maintenant
        </a>
      </div>
    </div>
  </div>
  
  <!-- Vague dÃ©corative en bas -->
  <div class="absolute bottom-0 left-0 right-0 z-10">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 120">
      <path fill="#ffffff" fill-opacity="1" d="M0,64L80,69.3C160,75,320,85,480,80C640,75,800,53,960,48C1120,43,1280,53,1360,58.7L1440,64L1440,120L1360,120C1280,120,1120,120,960,120C800,120,640,120,480,120C320,120,160,120,80,120L0,120Z"></path>
    </svg>
  </div>
</section>

<style>
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  .animate-fade-in {
    opacity: 0;
    animation: fadeIn 0.8s ease-out forwards;
  }
  
  .animation-delay-200 {
    animation-delay: 0.2s;
  }
  
  .animation-delay-400 {
    animation-delay: 0.4s;
  }
</style>
