//----------------------- CTA SECTION -----------------------
---
// src/components/homepage/CtaSection.astro
// Composant pour la section CTA (Call to Action)

interface Props {
  title: string;
  description: string;
  backgroundImage: string;
  buttonText: string;
  buttonUrl: string;
  phoneNumber: string;
}

---

<section 
  class="py-20 bg-cover bg-center bg-no-repeat relative"
  style={`background-image: url(${backgroundImage});`}
>
  <!-- Overlay -->
  <div class="absolute inset-0 bg-blue-900/80"></div>
  
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="max-w-2xl mx-auto text-center">
      <h2 class="text-3xl sm:text-4xl font-bold text-white mb-6">
        {title}
      </h2>
      
      <p class="text-xl text-gray-100 mb-8">
        {description}
      </p>
      
      <div class="flex flex-col sm:flex-row justify-center items-center space-y-4 sm:space-y-0 sm:space-x-6">
        <a 
          href={buttonUrl} 
          class="inline-block px-8 py-4 bg-white hover:bg-gray-100 text-blue-900 font-semibold rounded-lg transform hover:scale-105 transition-all duration-300 text-center"
        >
          {buttonText}
        </a>
        
        <div class="flex items-center">
          <div class="w-12 h-12 rounded-full bg-white flex items-center justify-center mr-3">
            <i class="fa-solid fa-phone text-blue-600 text-xl animate-pulse"></i>
          </div>
          <div class="text-left">
            <p class="text-gray-300 text-sm">Appelez-nous</p>
            <a href={`tel:${phoneNumber.replace(/\s/g, '')}`} class="text-white font-bold text-xl hover:underline">
              {phoneNumber}
            </a>
          </div>
        </div>
      </div>
      
      <!-- Badges supplémentaires -->
      <div class="flex flex-wrap justify-center mt-12 gap-4">
        <div class="bg-white/20 backdrop-blur-sm px-5 py-3 rounded-lg flex items-center">
          <i class="fa-solid fa-clock text-white mr-3"></i>
          <span class="text-white">Intervention rapide</span>
        </div>
        
        <div class="bg-white/20 backdrop-blur-sm px-5 py-3 rounded-lg flex items-center">
          <i class="fa-solid fa-thumbs-up text-white mr-3"></i>
          <span class="text-white">Satisfaction garantie</span>
        </div>
        
        <div class="bg-white/20 backdrop-blur-sm px-5 py-3 rounded-lg flex items-center">
          <i class="fa-solid fa-tag text-white mr-3"></i>
          <span class="text-white">Tarifs compétitifs</span>
        </div>
      </div>
    </div>
  </div>
</section>