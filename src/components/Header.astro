//----------------------- HEADER.ASTRO -----------------------
---
// src/components/Header.astro
// Récupération des listes de services et villes pour le menu
import { getCollection } from 'astro:content';

// Récupérer les services et les trier par ordre
const services = await getCollection('services');
const sortedServices = services.sort((a, b) => (a.data.order || 0) - (b.data.order || 0));

// Récupérer les villes premium et standard
const premiumVilles = await getCollection('villes/premium');
const standardVilles = await getCollection('villes');

// Initialiser l'état du menu mobile (fermé par défaut)
const isMobileMenuOpen = false;
---

<header class="bg-white shadow-md sticky top-0 z-50">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-4 md:justify-start md:space-x-10">
      <!-- Logo -->
      <div class="flex justify-start lg:w-0 lg:flex-1">
        <a href="/" class="flex items-center">
          <span class="sr-only">Logo</span>
          <img class="h-10 w-auto sm:h-12" src="/images/logo.svg" alt="Logo" />
          <span class="ml-3 text-xl font-bold text-gray-900">VotreMétier</span>
        </a>
      </div>
      
      <!-- Mobile menu button -->
      <div class="-mr-2 -my-2 md:hidden">
        <button type="button" class="mobile-menu-button bg-white rounded-md p-2 inline-flex items-center justify-center text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-500" aria-expanded="false">
          <span class="sr-only">Ouvrir le menu</span>
          <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
      
      <!-- Desktop navigation -->
      <nav class="hidden md:flex space-x-10">
        <!-- Services dropdown -->
        <div class="relative">
          <button type="button" class="group bg-white rounded-md text-gray-700 inline-flex items-center text-base font-medium hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 dropdown-button" aria-expanded="false">
            <span>Nos Services</span>
            <svg class="ml-2 h-5 w-5 text-gray-400 group-hover:text-gray-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </button>
          
          <div class="hidden dropdown-menu absolute z-10 -ml-4 mt-3 transform px-2 w-screen max-w-md sm:px-0 lg:ml-0 lg:left-1/2 lg:-translate-x-1/2">
            <div class="rounded-lg shadow-lg ring-1 ring-black ring-opacity-5 overflow-hidden">
              <div class="relative grid gap-6 bg-white px-5 py-6 sm:gap-8 sm:p-8">
                {sortedServices.map((service) => (
                  <a href={`/services/${service.slug}`} class="-m-3 p-3 flex items-start rounded-lg hover:bg-gray-50">
                    <div class="flex-shrink-0 flex items-center justify-center h-10 w-10 rounded-md bg-blue-500 text-white sm:h-12 sm:w-12">
                      <i class={`fa-solid fa-${service.data.icon}`}></i>
                    </div>
                    <div class="ml-4">
                      <p class="text-base font-medium text-gray-900">{service.data.title}</p>
                      <p class="mt-1 text-sm text-gray-500">{service.data.description}</p>
                    </div>
                  </a>
                ))}
              </div>
              <div class="px-5 py-5 bg-gray-50 space-y-6 sm:flex sm:space-y-0 sm:space-x-10 sm:px-8">
                <div class="flow-root">
                  <a href="/services" class="-m-3 p-3 flex items-center rounded-md text-base font-medium text-gray-900 hover:bg-gray-100">
                    <svg class="flex-shrink-0 h-6 w-6 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
                    </svg>
                    <span class="ml-3">Voir tous nos services</span>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <a href="/about" class="text-base font-medium text-gray-700 hover:text-gray-900">
          Qui sommes-nous
        </a>
        
        <a href="/blog" class="text-base font-medium text-gray-700 hover:text-gray-900">
          Blog
        </a>
        
        <a href="/contact" class="text-base font-medium text-gray-700 hover:text-gray-900">
          Contact
        </a>
        
        <!-- Villes dropdown -->
        <div class="relative">
          <button type="button" class="group bg-white rounded-md text-gray-700 inline-flex items-center text-base font-medium hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 dropdown-button" aria-expanded="false">
            <span>Villes</span>
            <svg class="ml-2 h-5 w-5 text-gray-400 group-hover:text-gray-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </button>
          
          <div class="hidden dropdown-menu absolute z-10 left-1/2 transform -translate-x-1/2 mt-3 px-2 w-screen max-w-md sm:px-0">
            <div class="rounded-lg shadow-lg ring-1 ring-black ring-opacity-5 overflow-hidden">
              <div class="relative grid gap-6 bg-white px-5 py-6 sm:gap-8 sm:p-8">
                <!-- Premium Villes -->
                {premiumVilles.length > 0 && (
                  <div>
                    <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-3">Villes Premium</h3>
                    <div class="grid grid-cols-2 gap-3">
                      {premiumVilles.map((ville) => (
                        <a href={`/villes/premium/${ville.slug}`} class="text-base text-gray-900 hover:text-blue-700">
                          {ville.data.title}
                        </a>
                      ))}
                    </div>
                  </div>
                )}
                
                <!-- Standard Villes -->
                {standardVilles.length > 0 && (
                  <div class="mt-5">
                    <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-3">Autres Villes</h3>
                    <div class="grid grid-cols-2 gap-3">
                      {standardVilles.map((ville) => (
                        <a href={`/villes/${ville.slug}`} class="text-base text-gray-900 hover:text-blue-700">
                          {ville.data.title}
                        </a>
                      ))}
                    </div>
                  </div>
                )}
              </div>
            </div>
          </div>
        </div>
      </nav>
      
      <!-- Call to action -->
      <div class="hidden md:flex items-center justify-end md:flex-1 lg:w-0">
        <a href="tel:+33XXXXXXXXX" class="whitespace-nowrap text-base font-medium text-gray-700 hover:text-gray-900">
          <i class="fa-solid fa-phone mr-2 text-blue-600"></i>
          01 23 45 67 89
        </a>
        <a href="/contact" class="ml-8 whitespace-nowrap inline-flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-blue-600 hover:bg-blue-700">
          Devis gratuit
        </a>
      </div>
    </div>
  </div>
  
  <!-- Mobile menu, show/hide based on mobile menu state. -->
  <div class="hidden mobile-menu md:hidden">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
      <a href="/" class="block px-3 py-2 rounded-md text-base font-medium text-gray-900 hover:bg-gray-50">Accueil</a>
      
      <div class="mobile-submenu">
        <button class="w-full flex justify-between items-center px-3 py-2 rounded-md text-base font-medium text-gray-900 hover:bg-gray-50 mobile-submenu-button">
          <span>Nos Services</span>
          <svg class="ml-2 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </button>
        <div class="hidden mobile-submenu-items pl-4 space-y-1">
          {sortedServices.map((service) => (
            <a href={`/services/${service.slug}`} class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:bg-gray-50">
              {service.data.title}
            </a>
          ))}
          <a href="/services" class="block px-3 py-2 rounded-md text-base font-medium text-blue-600 hover:bg-gray-50">
            Voir tous nos services
          </a>
        </div>
      </div>
      
      <a href="/about" class="block px-3 py-2 rounded-md text-base font-medium text-gray-900 hover:bg-gray-50">Qui sommes-nous</a>
      <a href="/blog" class="block px-3 py-2 rounded-md text-base font-medium text-gray-900 hover:bg-gray-50">Blog</a>
      <a href="/contact" class="block px-3 py-2 rounded-md text-base font-medium text-gray-900 hover:bg-gray-50">Contact</a>
      
      <div class="mobile-submenu">
        <button class="w-full flex justify-between items-center px-3 py-2 rounded-md text-base font-medium text-gray-900 hover:bg-gray-50 mobile-submenu-button">
          <span>Villes</span>
          <svg class="ml-2 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </button>
        <div class="hidden mobile-submenu-items pl-4 space-y-1">
          {premiumVilles.length > 0 && (
            <div>
              <div class="px-3 py-2 text-xs font-semibold text-gray-500 uppercase tracking-wider">
                Villes Premium
              </div>
              {premiumVilles.map((ville) => (
                <a href={`/villes/premium/${ville.slug}`} class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:bg-gray-50">
                  {ville.data.title}
                </a>
              ))}
            </div>
          )}
          
          {standardVilles.length > 0 && (
            <div>
              <div class="px-3 py-2 text-xs font-semibold text-gray-500 uppercase tracking-wider mt-2">
                Autres Villes
              </div>
              {standardVilles.map((ville) => (
                <a href={`/villes/${ville.slug}`} class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:bg-gray-50">
                  {ville.data.title}
                </a>
              ))}
            </div>
          )}
        </div>
      </div>
    </div>
    
    <div class="pt-4 pb-3 border-t border-gray-200">
      <div class="flex items-center px-5">
        <div class="flex-shrink-0">
          <svg class="h-10 w-10 text-blue-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
        </div>
        <div class="ml-3">
          <div class="text-base font-medium text-gray-800">Besoin d'aide ?</div>
          <div class="text-sm font-medium text-gray-500">01 23 45 67 89</div>
        </div>
      </div>
      <div class="mt-3 px-2 space-y-1">
        <a href="/contact" class="block px-3 py-2 rounded-md text-base font-medium text-white bg-blue-600 hover:bg-blue-700 text-center">
          Devis gratuit
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  // Script pour gérer les interactions du menu
  document.addEventListener('DOMContentLoaded', () => {
    // Menu dropdowns
    const dropdownButtons = document.querySelectorAll('.dropdown-button');
    dropdownButtons.forEach(button => {
      button.addEventListener('click', (e) => {
        const dropdown = button.nextElementSibling;
        dropdown.classList.toggle('hidden');
        button.setAttribute('aria-expanded', dropdown.classList.contains('hidden') ? 'false' : 'true');
        
        // Fermer les autres dropdowns
        dropdownButtons.forEach(otherButton => {
          if (otherButton !== button) {
            const otherDropdown = otherButton.nextElementSibling;
            if (otherDropdown && !otherDropdown.classList.contains('hidden')) {
              otherDropdown.classList.add('hidden');
              otherButton.setAttribute('aria-expanded', 'false');
            }
          }
        });
        
        e.stopPropagation();
      });
    });
    
    // Fermer les dropdowns si on clique ailleurs
    document.addEventListener('click', () => {
      document.querySelectorAll('.dropdown-menu').forEach(dropdown => {
        dropdown.classList.add('hidden');
      });
      dropdownButtons.forEach(button => {
        button.setAttribute('aria-expanded', 'false');
      });
    });
    
    // Mobile menu
    const mobileMenuButton = document.querySelector('.mobile-menu-button');
    const mobileMenu = document.querySelector('.mobile-menu');
    
    mobileMenuButton?.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
      mobileMenuButton.setAttribute(
        'aria-expanded',
        mobileMenu.classList.contains('hidden') ? 'false' : 'true'
      );
    });
    
    // Mobile submenus
    const mobileSubmenuButtons = document.querySelectorAll('.mobile-submenu-button');
    mobileSubmenuButtons.forEach(button => {
      button.addEventListener('click', () => {
        const submenu = button.nextElementSibling;
        submenu.classList.toggle('hidden');
        
        // Animate the icon
        const icon = button.querySelector('svg');
        icon.style.transform = submenu.classList.contains('hidden') ? 'rotate(0deg)' : 'rotate(180deg)';
        icon.style.transition = 'transform 0.2s';
      });
    });
  });
</script>