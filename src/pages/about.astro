<style>
  /* Styles pour la timeline responsive */
  .timeline-container {
    width: 100%;
    overflow: hidden;
  }
  
  .timeline {
    display: flex;
    justify-content: space-between;
    margin: 1rem 0;
    position: relative;
  }
  
  .timeline::before {
    content: '';
    position: absolute;
    top: 1.5rem;
    left: 0;
    right: 0;
    height: 2px;
    background-color: #e2e8f0;
    z-index: 1;
  }
  
  .timeline-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    z-index: 2;
    text-align: center;
    padding: 0 0.5rem;
    background-color: white;
  }
  
  .timeline-item .year {
    color: #3182ce;
    font-weight: bold;
    margin-bottom: 0.5rem;
  }
  
  .timeline-item .description {
    color: #4a5568;
    font-size: 0.875rem;
  }
  
  /* Version responsive */
  @media (max-width: 768px) {
    .timeline {
      flex-direction: column;
      align-items: flex-start;
      margin-left: 1.5rem;
    }
    
    .timeline::before {
      top: 0;
      bottom: 0;
      left: 0;
      width: 2px;
      height: 100%;
      right: auto;
    }
    
    .timeline-item {
      flex-direction: row;
      justify-content: flex-start;
      align-items: center;
      width: 100%;
      margin-bottom: 1.5rem;
      text-align: left;
      padding-left: 1.5rem;
    }
    
    .timeline-item .year {
      margin-right: 1rem;
      margin-bottom: 0;
      position: relative;
    }
    
    .timeline-item .year::before {
      content: '';
      position: absolute;
      top: 50%;
      left: -1.75rem;
      width: 0.75rem;
      height: 0.75rem;
      background-color: #3182ce;
      border-radius: 50%;
      transform: translateY(-50%);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Animation des compteurs
    const counters = document.querySelectorAll('.counter');
    const speed = 200; // Plus la valeur est basse, plus c'est rapide
    
    const animateCounters = () => {
      counters.forEach(counter => {
        const target = +counter.getAttribute('data-target');
        const count = +counter.innerText;
        
        const increment = target / speed;
        
        if (count < target) {
          counter.innerText = Math.ceil(count + increment);
          setTimeout(animateCounters, 1);
        } else {
          counter.innerText = target;
        }
      });
    };
    
    // Observer pour démarrer l'animation lorsque la section est visible
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          animateCounters();
          observer.unobserve(entry.target);
        }
      });
    }, { threshold: 0.5 });
    
    // Observer la section des compteurs
    const section = document.querySelector('.counter')?.closest('section');
    if (section) observer.observe(section);
  });
</script>