---
// src/pages/404.astro
import BaseLayout from '../layouts/BaseLayout.astro';

// Métadonnées SEO
const title = "Page Non Trouvée | Erreur 404";
const description = "La page que vous recherchez n'existe pas ou a été déplacée. Retournez à la page d'accueil ou explorez nos services.";
---

<BaseLayout 
  title={title}
  description={description}
>
  <div class="flex items-center justify-center min-h-[70vh] bg-gray-50 py-16">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="max-w-lg mx-auto">
        <!-- Illustration d'erreur -->
        <div class="mb-8">
          <div class="text-blue-600 text-9xl font-bold mb-4">404</div>
          <div class="relative w-48 h-48 mx-auto">
            <div class="absolute inset-0 bg-blue-100 rounded-full animate-pulse"></div>
            <div class="absolute inset-4 bg-white rounded-full flex items-center justify-center">
              <i class="fa-solid fa-map-marker-question text-blue-600 text-5xl"></i>
            </div>
          </div>
        </div>
        
        <h1 class="text-3xl font-bold text-gray-900 mb-4">
          Page Non Trouvée
        </h1>
        
        <p class="text-lg text-gray-700 mb-8">
          La page que vous recherchez n'existe pas ou a été déplacée vers une autre adresse.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/" class="btn btn-primary">
            <i class="fa-solid fa-home mr-2"></i>
            Retour à l'accueil
          </a>
          
          <a href="/contact" class="btn btn-outline">
            <i class="fa-solid fa-headset mr-2"></i>
            Nous contacter
          </a>
        </div>
        
        <!-- Suggestions -->
        <div class="mt-12 bg-white rounded-lg shadow-sm p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">
            Vous pourriez être intéressé par :
          </h2>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <a href="/services" class="p-4 border border-gray-200 rounded-lg hover:bg-blue-50 hover:border-blue-200 transition-colors duration-300">
              <div class="flex items-center">
                <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center mr-3">
                  <i class="fa-solid fa-tools text-blue-600"></i>
                </div>
                <span class="font-medium">Nos Services</span>
              </div>
            </a>
            
            <a href="/about" class="p-4 border border-gray-200 rounded-lg hover:bg-blue-50 hover:border-blue-200 transition-colors duration-300">
              <div class="flex items-center">
                <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center mr-3">
                  <i class="fa-solid fa-users text-blue-600"></i>
                </div>
                <span class="font-medium">Qui Sommes-nous</span>
              </div>
            </a>
            
            <a href="/blog" class="p-4 border border-gray-200 rounded-lg hover:bg-blue-50 hover:border-blue-200 transition-colors duration-300">
              <div class="flex items-center">
                <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center mr-3">
                  <i class="fa-solid fa-newspaper text-blue-600"></i>
                </div>
                <span class="font-medium">Notre Blog</span>
              </div>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>