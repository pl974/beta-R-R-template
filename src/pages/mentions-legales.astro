---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = "Mentions Légales";
const description = "Mentions légales et informations juridiques concernant notre site web et notre entreprise.";

const breadcrumbSchema = {
  items: [
    { name: "Accueil", url: "/" },
    { name: "Mentions Légales", url: "/mentions-legales" }
  ]
};
---

<BaseLayout 
  title={title}
  description={description}
  schemaType="BreadcrumbList"
  schemaData={breadcrumbSchema}
>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="text-3xl font-bold text-gray-900 mb-8">
      Mentions Légales
    </h1>
    
    <div class="bg-white rounded-lg shadow-md p-6 md:p-8 mb-8">
      <h2 class="text-xl font-bold text-gray-900 mb-4">
        Éditeur du site
      </h2>
      
      <p class="text-gray-700 mb-4">
        <strong>Raison sociale :</strong> Votre Entreprise<br>
        <strong>Forme juridique :</strong> SARL<br>
        <strong>Capital social :</strong> 10 000 €<br>
        <strong>SIRET :</strong> 123 456 789 00012<br>
        <strong>RCS :</strong> Paris B 123 456 789<br>
        <strong>Siège social :</strong> 123 Rue Exemple, 75000 Paris<br>
        <strong>Téléphone :</strong> 01 23 45 67 89<br>
        <strong>Email :</strong> contact@exemple.fr
      </p>
      
      <p class="text-gray-700">
        <strong>Directeur de la publication :</strong> Jean Dupont
      </p>
    </div>
    
    <div class="bg-white rounded-lg shadow-md p-6 md:p-8 mb-8">
      <h2 class="text-xl font-bold text-gray-900 mb-4">
        Hébergement
      </h2>
      
      <p class="text-gray-700">
        <strong>Hébergeur :</strong> Netlify, Inc.<br>
        <strong>Adresse :</strong> 2325 3rd Street, Suite 215, San Francisco, California 94107, USA<br>
        <strong>Site web :</strong> <a href="https://www.netlify.com" class="text-blue-600 hover:text-blue-800">https://www.netlify.com</a>
      </p>
    </div>
    
    <div class="bg-white rounded-lg shadow-md p-6 md:p-8 mb-8">
      <h2 class="text-xl font-bold text-gray-900 mb-4">
        Propriété intellectuelle
      </h2>
      
